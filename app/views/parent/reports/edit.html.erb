<div class="container">
  <div class="form-group row">
    <div class="col">
      <h3 class="mt-2">保護者コメント修正</h3>
    </div>
  </div>
    <div class="form-group row">
      <div class="col-8">
        <%= form_with model: @report, url: parent_report_path(@report.id) do |f| %>
          <table class="table mt-4" style="width: 95%">
            <tr>
              <th class="thead-lignt bg-light" style="width: 25%">題名</th>
              <td><%= @report.title %></td>
            </tr>
            <tr>
              <th class="thead-lignt bg-light">報告書詳細</th>
              <td><%= @report.body %></td>
            </tr>
              <tr>
                <th class="thead-lignt bg-light">
                  保護者より
                  <div class="actions">
                    <%= f.submit "修正完了", class: "btn btn-outline-success" %>
                  </div>
                </th>
                <td>
                  <div class="form-group row">
                    <div class="col-9">
                        <%= f.text_area :comment, placeholder:"○○について..." ,class: "w-100" %>
                    </div>
                  </div>
                </td>
              </tr>
            </table>
          <% end %>
        </div>

      <div class="col-4">
        <table class="table mt-4" style="width: 95%">
            <tr>
              <th class="thead-lignt bg-light" style="width: 35%">日付</th>
              <td><%= l @report.created_at, format: :v_short %></td>
            </tr>
            <tr>
              <th class="thead-lignt bg-light">教科</th>
              <td><%= @report.subject.subject_name %></td>
            </tr>
            <tr>
              <th class="thead-lignt bg-light">担当講師</th>
              <td><%= @report.teacher.last_name %></td>
              </tr>
        </table>

        <!--宿題についてのテーブル-->
        <table class="table mt-4" style="width: 95%">
          <thead class="thead-lignt bg-light">
            <tr>
              <th>日付</th>
              <th>宿題内容</th>
            </tr>
          </thead>
          <tbody>
            <% @homeworks.each do |homework| %>
              <tr>
                <td><%= homework.deadline %></td>
                <td><%= homework.task %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
<div class="container">
  <div class="form-group row">
    <div class="col">
      <h3 class="mt-2">新規保護者登録</h3>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "parent/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <label class="col-3 mb-0 pr-0">メールアドレス</label>
      <div class="col-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-3 mb-0 pr-0">ログインコード</label>
      <div class="col-9">
        <%= f.text_field :code, autofocus: true, autocomplete: "code", placeholder: "samplecode" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-3 mb-0 pr-0">パスワード(<%= @minimum_password_length %> 文字以上)</label>
      <div class="col-9">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-3 mb-0 pr-0">パスワード(確認用)</label>
      <div class="col-9">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class: 'btn btn-outline-success' %>
    </div>
  <% end %>

  <div class="container text-center mt-4">
    <div>
      <b class="font-weihgt-bold">既に登録済みの方</b>
      <br>
      <%= render "parent/shared/links" %>
    </div>
  </div>
</div>
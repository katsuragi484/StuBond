<div class='container mt-5'>
  <div class='row'>
    <h3 class="page-name">
      <strong>
        保護者情報編集
      </strong>
    </h3>
  </div></br>
  <%= form_with model:@parent, url: information_parent_parents_path, local:true do |f| %>

  <div class="row">
    <div class="col">

      <div class="row">
        <div class="col-3">
          <p>メールアドレス</p>
        </div>
        <div class="col-9">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>ログインコード</p>
        </div>
        <div class="col-9">
          <%= f.text_field :code %>
        </div>
      </div>
    </div>
  </div>

  <div class="container text-center mt-4">
      <div class="col-xs-offset-1">
          <%= f.submit "変更を保存する" ,class: 'btn btn-outline-success' %>
      </div>
  </div>
  <% end %>

</div>
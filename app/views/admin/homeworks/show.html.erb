<div class="container">
  <div class="form-group row">
    <div class="col">
      <h3 class="mt-2">宿題内容</h3>
    </div>
  </div>
    <div class="form-group row">

      <div class="col-10">
        <table class="table mt-4" style="width: 95%">
            <tr>
              <th class="thead-lignt bg-light">担当生徒</th>
              <td><%= @student.last_name %>さん</td>
            </tr>
        </table>

        <!--宿題についてのテーブル-->
        <table class="table mt-4" style="width: 95%">
          <thead class="thead-lignt bg-light">
            <tr>
              <th>教科</th>
              <th>日付</th>
              <th>宿題内容</th>

            </tr>
          </thead>
          <tbody>
            <% if @homeworks.present? %>
              <% @homeworks.each do |homework| %>
                <tr>
                  <td><%= homework.report.subject.subject_name %></td>
                  <td><%= homework.deadline %></td>
                  <td><%= homework.task, admin_report_path(homework.report_id) %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <% if @homeworks.present? %>
          <%= paginate @homeworks %>
        <% end %>
      </div>

<div class="container">

  <div class="form-group row">
    <div class="col">
      <h3 class="mt-2">チャットルーム</h3>
    </div>
  </div>
  <div class="user-name">
    <h5>
      <%= @student.last_name %>さん
    </h5>
  </div>
<hr>
<div class="chats">
  <div class="chat">
    <% if @chats.present? %>
      <% @chats.each do |m| %>
        <div class="chat-box">
          <% if m.student_id%>
              <div class="chat-name">
                <i class="fas fa-user-edit"></i>
                <strong><%= m.student.last_name %>さん</strong>
              </div>
              <div class="chat-hukidashi mb-3"> <strong><%= m.message %></strong> <br>
                <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
              </div>
          <% elsif m.parent_id%>
              <div class="chat-name">
                <i class="fas fa-smile"></i>
                <strong>保護者様</strong>
              </div>
              <div class="chat-hukidashi mb-3"> <strong><%= m.message %></strong> <br>
                <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
              </div>
          <% elsif m.admin_id%>
              <div class="chat-name text-right">
                <i class="fas fa-school"></i>
                <strong>室長</strong>
              </div>
              <div class="chat-hukidashi mb-3 text-right"> <strong><%= m.message %></strong> <br>
                <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
              </div>
          <% end %>
        </div>

      <% end %>
    <% end %>
  </div>
  <div class="posts text-center">
    <%= form_with model: @chat, url: admin_chats_path do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
        <%= f.hidden_field :chatroom_id, value: @chatroom.id %>
          <%= f.submit "投稿",class: 'btn btn-outline-success'%>
    <% end %>
  </div>
</div>
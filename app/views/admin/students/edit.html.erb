<div class='container mt-5'>
  <div class='row'>
    <h3 class="page-name">
      <strong>
        生徒情報編集
      </strong>
    </h3>
  </div></br>
  <%= form_with model:@student, url: admin_student_path, local:true do |f| %>

  <div class="row">
    <div class="col">
      <div class="row">
        <div class="col-3">
          <p>プロフィール画像</p>
        </div>
        <div class="col-9">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>氏名</p>
        </div>
        <div class="col-9">
          <%= f.text_field :last_name %>&nbsp;<%= f.text_field :first_name %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>フリガナ</p>
        </div>
        <div class="col-9">
          <%= f.text_field :last_name_kana %>&nbsp;<%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>電話番号</p>
        </div>
        <div class="col-9">
          <%= f.text_field :phone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>メールアドレス</p>
        </div>
        <div class="col-9">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="row">
        <label class="col-3">
          <p>保護者id</p>
        </label>
        <div class="col-9">
          <%= f.text_field :parent_id %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>学校名</p>
        </div>
        <div class="col-9">
          <%= f.text_field :school %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>ログインコード</p>
        </div>
        <div class="col-9">
          <%= f.text_field :code %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>ステータス</p>
        </div>
        <div class="col-9">
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted_true, '有効' %>&nbsp;
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted_false, '退会' %>
        </div>
      </div>

    </div>
  </div>

  <div class="container text-center mt-4">
      <div class="col-xs-offset-1">
          <%= f.submit "変更を保存する" ,class: 'btn btn-outline-success' %>
      </div>
  </div>
  <% end %>

</div>
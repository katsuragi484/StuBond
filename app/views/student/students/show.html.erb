<div class='container mt-5'>
    <div class='row'>
      <h3 class="page-name">
          <strong>マイページ</strong>
      </h3>
    </div>
    <div class='row'>
        <div class="d-flex p-2 bd-highlight">
            <strong>登録情報</strong>
            <div class="col">
            <%= link_to "編集する", information_edit_student_students_path, class: 'btn btn-outline-success' %>
            </div>
        </div>
    </div>

    <div class='row'>
        <div class="col-md-7">
            <table class="table table-bordered border-dark">
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">氏名</td>
                <td>
                    <%= @student.last_name + @student.first_name %>
                </td>
              </tr>
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">カナ</td>
                <td><%= @student.last_name_kana + @student.first_name_kana %></td>
              </tr>
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">学校名</td>
                <td><%= @student.school %></td>
              </tr>

              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">電話番号</td>
                <td><%= @student.phone_number %></td>
              </tr>
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 30%">メールアドレス</td>
                <td><%= @student.email %></td>
              </tr>
               <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">ログインコード</td>
                <td><%= @student.code %></td>
              </tr>
            </table>
        </div>
    </div>
